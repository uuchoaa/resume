{
  "name": "electron-scraper",
  "version": "2.0.0",
  "description": "Modular Electron app for web scraping with extensible sources and actions",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && vite build && cp src/ui/welcome.html dist/ui/welcome.html",
    "build:electron": "tsc",
    "build:react": "vite build",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --enable-logging",
    "dev:react": "vite",
    "watch": "tsc --watch"
  },
  "keywords": [
    "electron",
    "scraper",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "electron": "^28.0.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.0",
    "vite": "^7.2.6"
  }
}
